<h4 class="ui center aligned medium icon header">
  <i class="circular coffee orange icon"></i>
  Say Something
</h4>
<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
        <div class="content">
          <div class="ui feed">
            <div class="event">
              <div class="content">
                <div class="summary">
                  <% @messages.each do |message| %>
                  <p>
                    <b><%= message.user.username %>:</b> <%= message.body %>
                  </p>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
  </div>
